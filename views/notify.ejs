             <div class="card">
                            <div class="header">
                                <h4 class="title">Notification Details Details</h4>
                            </div>
                            <div class="content">
                                <form action="/add_notify" method="post">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Bus Number </label>
                                                <input type="text" class="form-control" name="ID"  placeholder="Bus Number" value="313">
                                            </div>
                                        </div>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                <label>Message </label>
                                                <input type="text" class="form-control" name="message" placeholder="Message" >
                                            </div>
                                        </div>
                                  
                                    </div>

           


                      


                                    <button type="submit" class="btn btn-info btn-fill pull-right">Give Notification</button>
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                                                   <div class="content table-responsive table-full-width">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <th>Bus ID</th>
                                        <th>Message</th>
                                        <th>_id</th>
                                        <th>Delete</th>
                                    </thead>
                                    <tbody>
                                             <% notify.forEach(function(notify) { %>  
                      <tr>
                        <td><%= notify.ID %></td>
                        <td><%= notify.message %></td>
                       
                        <td><%= notify._id %></td>
                    

                          <td><button value=<%= notify._id %> class="btn delete-notify btn-info">Delete</button></td>
                      </tr>    
                       <% }); %> 
                                        
                                    </tbody>
                                </table>

                            </div>
                        </div>